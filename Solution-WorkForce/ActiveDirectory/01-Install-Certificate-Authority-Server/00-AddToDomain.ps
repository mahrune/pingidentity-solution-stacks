# Point local DNS to Domain Controller
Get-DnsClientServerAddress

# Use the IPv4 Network Interface Index 
$dcIp = {Domain Controller IP}
$index = Get-DnsClientServerAddress | Where-Object {$_.InterfaceAlias -like "Ethernet*" -and $_.ServerAddresses -like '*'} | Select-Object InterfaceIndex
Set-DnsClientServerAddress -InterfaceIndex $index.InterfaceIndex -ServerAddresses ($dcIp)

# Use `sconfig` to Add the CA Server to the Domain - `workforce.com`
# domainname == workforce.com
# Administrator == workforce\Administrator